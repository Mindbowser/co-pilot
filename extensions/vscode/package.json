{
  "name": "epi-copilot",
  "icon": "media/icon.png",
  "author": "Mindbowser",
  "version": "0.0.25",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mindbowser/co-pilot"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "bugs": {
    "url": "https://github.com/Mindbowser/co-pilot/issues",
    "email": "nate@continue.dev"
  },
  "homepage": "https://continue.dev",
  "qna": "https://github.com/Mindbowser/co-pilot/issues/new/choose",
  "license": "Apache-2.0",
  "displayName": "Epi-Copilot",
  "pricing": "Free",
  "description": "The leading open-source AI code assistant",
  "publisher": "Mindbowser",
  "engines": {
    "vscode": "^1.70.0",
    "node": ">=20.11.0"
  },
  "engine-strict": true,
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "categories": [
    "AI",
    "Chat",
    "Programming Languages",
    "Education",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "chatgpt",
    "github",
    "copilot",
    "claude",
    "sonnet",
    "mistral",
    "codestral",
    "codegpt",
    "ai",
    "llama"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:continueGUIView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "filenames": [
          "config.json",
          ".continuerc.json"
        ],
        "id": "jsonc"
      }
    ],
    "configuration": {
      "title": "Continue",
      "properties": {
        "epi-copilot.telemetryEnabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Continue collects anonymous usage data, cleaned of PII, to help us improve the product for our users. Read more  at [continue.dev › Telemetry](https://docs.continue.dev/telemetry)."
        },
        "epi-copilot.enableContinueForTeams": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "_(Requires window reload)_ Enable Continue for teams beta features. To sign in, click the person icon in the bottom right of the sidebar."
        },
        "epi-copilot.showInlineTip": {
          "type": "boolean",
          "default": true,
          "description": "Show inline suggestion to use the Continue keyboard shortcuts (e.g. \"Cmd/Ctrl L to select code, Cmd/Ctrl I to edit\")."
        },
        "epi-copilot.enableQuickActions": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable the experimental Quick Actions feature. Read our walkthrough to learn about configuration and how to share feedback: [continue.dev › Walkthrough: Quick Actions (experimental)](https://docs.continue.dev/features/quick-actions)"
        },
        "epi-copilot.enableTabAutocomplete": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable Continue's tab autocomplete feature. Read our walkthrough to learn about configuration and how to share feedback: [continue.dev › Walkthrough: Tab Autocomplete (beta)](https://docs.continue.dev/features/tab-autocomplete)"
        },
        "epi-copilot.pauseTabAutocompleteOnBattery": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Pause Continue's tab autocomplete feature when your battery is low."
        },
        "epi-copilot.pauseCodebaseIndexOnStart": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Pause Continue's codebase index on start."
        },
        "epi-copilot.enableDebugLogs": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable Continue Debug Logs in the Output panel."
        },
        "epi-copilot.remoteConfigServerUrl": {
          "type": "string",
          "default": null,
          "markdownDescription": "If your team is set up to use shared configuration, enter the server URL here and your user token below to enable automatic syncing."
        },
        "epi-copilot.userToken": {
          "type": "string",
          "default": null,
          "markdownDescription": "If your team is set up to use shared configuration, enter your user token here and your server URL above to enable automatic syncing."
        },
        "epi-copilot.remoteConfigSyncPeriod": {
          "type": "number",
          "default": 60,
          "description": "The period of time in minutes between automatic syncs."
        }
      }
    },
    "commands": [
      {
        "command": "epi-copilot.applyCodeFromChat",
        "category": "Continue",
        "title": "Apply code from chat",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.acceptDiff",
        "category": "Continue",
        "title": "Accept Diff",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.rejectDiff",
        "category": "Continue",
        "title": "Reject Diff",
        "group": "Continue",
        "icon": "$(stop)"
      },
      {
        "command": "epi-copilot.acceptVerticalDiffBlock",
        "category": "Continue",
        "title": "Accept Vertical Diff Block",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.rejectVerticalDiffBlock",
        "category": "Continue",
        "title": "Reject Vertical Diff Block",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.quickEdit",
        "category": "Continue",
        "title": "Generate Code",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.focusContinueInput",
        "category": "Continue",
        "title": "Add Highlighted Code to Context",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.focusContinueInputWithoutClear",
        "category": "Continue",
        "title": "Add Highlighted Code to Context",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.debugTerminal",
        "category": "Continue",
        "title": "Debug Terminal",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.toggleFullScreen",
        "category": "Continue",
        "title": "Toggle Full Screen",
        "icon": "$(fullscreen)",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.openConfigJson",
        "category": "Continue",
        "title": "Open config.json",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.toggleTabAutocompleteEnabled",
        "category": "Continue",
        "title": "Toggle Autocomplete Enabled",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.selectFilesAsContext",
        "category": "Continue",
        "title": "Select Files as Context",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.newSession",
        "category": "Continue",
        "title": "New Session",
        "icon": "$(add)",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.viewHistory",
        "category": "Continue",
        "title": "View History",
        "icon": "$(history)",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.writeCommentsForCode",
        "category": "Continue",
        "title": "Write Comments for this Code",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.writeDocstringForCode",
        "category": "Continue",
        "title": "Write a Docstring for this Code",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.fixCode",
        "category": "Continue",
        "title": "Fix this Code",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.optimizeCode",
        "category": "Continue",
        "title": "Optimize this Code",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.fixGrammar",
        "category": "Continue",
        "title": "Fix Grammar / Spelling",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.codebaseForceReIndex",
        "category": "Continue",
        "title": "Codebase Force Re-Index",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.rebuildCodebaseIndex",
        "category": "Continue",
        "title": "Rebuild codebase index",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.docsIndex",
        "category": "Continue",
        "title": "Docs Index",
        "group": "Continue"
      },
      {
        "command": "epi-copilot.docsReIndex",
        "category": "Continue",
        "title": "Docs Force Re-Index",
        "group": "Continue"
      }
    ],
    "keybindings": [
      {
        "command": "epi-copilot.focusContinueInput",
        "mac": "cmd+l",
        "key": "ctrl+l"
      },
      {
        "command": "epi-copilot.focusContinueInputWithoutClear",
        "mac": "cmd+shift+l",
        "key": "ctrl+shift+l"
      },
      {
        "command": "epi-copilot.acceptDiff",
        "mac": "shift+cmd+enter",
        "key": "shift+ctrl+enter"
      },
      {
        "command": "epi-copilot.rejectDiff",
        "mac": "shift+cmd+backspace",
        "key": "shift+ctrl+backspace"
      },
      {
        "command": "epi-copilot.rejectDiff",
        "mac": "cmd+z",
        "key": "ctrl+z",
        "when": "epi-copilot.diffVisible"
      },
      {
        "command": "epi-copilot.quickEditHistoryUp",
        "mac": "up",
        "key": "up",
        "when": "false && epi-copilot.quickEditHistoryFocused"
      },
      {
        "command": "epi-copilot.quickEditHistoryDown",
        "mac": "down",
        "key": "down",
        "when": "false && epi-copilot.quickEditHistoryFocused"
      },
      {
        "command": "epi-copilot.acceptVerticalDiffBlock",
        "mac": "alt+cmd+y",
        "key": "alt+ctrl+y"
      },
      {
        "command": "epi-copilot.rejectVerticalDiffBlock",
        "mac": "alt+cmd+n",
        "key": "alt+ctrl+n"
      },
      {
        "command": "epi-copilot.quickEdit",
        "mac": "cmd+i",
        "key": "ctrl+i"
      },
      {
        "command": "epi-copilot.debugTerminal",
        "mac": "cmd+shift+r",
        "key": "ctrl+shift+r"
      },
      {
        "command": "epi-copilot.toggleFullScreen",
        "mac": "cmd+k cmd+m",
        "key": "ctrl+k ctrl+m",
        "when": "!terminalFocus"
      },
      {
        "command": "epi-copilot.toggleTabAutocompleteEnabled",
        "mac": "cmd+k cmd+a",
        "key": "ctrl+k ctrl+a",
        "when": "!terminalFocus"
      },
      {
        "command": "epi-copilot.applyCodeFromChat",
        "mac": "alt+a",
        "key": "alt+a"
      }
    ],
    "submenus": [
      {
        "id": "epi-copilot.continueSubMenu",
        "label": "Continue"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "epi-copilot.quickEdit"
        },
        {
          "command": "epi-copilot.focusContinueInput"
        },
        {
          "command": "epi-copilot.focusContinueInputWithoutClear"
        },
        {
          "command": "epi-copilot.debugTerminal"
        },
        {
          "command": "epi-copilot.toggleFullScreen"
        },
        {
          "command": "epi-copilot.newSession"
        }
      ],
      "editor/context": [
        {
          "submenu": "epi-copilot.continueSubMenu",
          "group": "0_acontinue"
        }
      ],
      "editor/title/run": [
        {
          "command": "epi-copilot.rejectDiff",
          "group": "Continue",
          "when": "epi-copilot.streamingDiff"
        }
      ],
      "epi-copilot.continueSubMenu": [
        {
          "command": "epi-copilot.focusContinueInputWithoutClear",
          "group": "Continue",
          "when": "editorHasSelection"
        },
        {
          "command": "epi-copilot.writeCommentsForCode",
          "group": "Continue",
          "when": "editorHasSelection"
        },
        {
          "command": "epi-copilot.writeDocstringForCode",
          "group": "Continue",
          "when": "editorHasSelection"
        },
        {
          "command": "epi-copilot.fixCode",
          "group": "Continue",
          "when": "editorHasSelection"
        },
        {
          "command": "epi-copilot.optimizeCode",
          "group": "Continue",
          "when": "editorHasSelection"
        },
        {
          "command": "epi-copilot.fixGrammar",
          "group": "Continue",
          "when": "editorHasSelection && editorLangId == 'markdown'"
        }
      ],
      "explorer/context": [
        {
          "command": "epi-copilot.selectFilesAsContext",
          "group": "1_debug@1"
        }
      ],
      "view/title": [
        {
          "command": "epi-copilot.newSession",
          "group": "navigation@1",
          "when": "view == epi-copilot.continueGUIView"
        },
        {
          "command": "epi-copilot.toggleFullScreen",
          "group": "navigation@1",
          "when": "view == epi-copilot.continueGUIView"
        },
        {
          "command": "epi-copilot.viewHistory",
          "group": "navigation@1",
          "when": "view == epi-copilot.continueGUIView"
        }
      ],
      "editor/title": [
        {
          "command": "epi-copilot.toggleFullScreen",
          "group": "navigation@1",
          "when": "activeWebviewPanelId == epi-copilot.continueGUIView"
        }
      ],
      "terminal/context": [
        {
          "command": "epi-copilot.debugTerminal",
          "group": "navigation@top"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "continue",
          "title": "Epi-Copilot",
          "icon": "media/sidebar-icon.png"
        }
      ]
    },
    "views": {
      "continue": [
        {
          "type": "webview",
          "id": "epi-copilot.continueGUIView",
          "name": "",
          "visibility": "visible"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": "config.json",
        "url": "./config_schema.json"
      },
      {
        "fileMatch": ".continuerc.json",
        "url": "./continue_rc_schema.json"
      }
    ]
  },
  "scripts": {
    "esbuild-base": "node scripts/esbuild.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "tsc": "tsc -p ./",
    "tsc-watch": "tsc -watch -p ./",
    "rebuild": "electron-rebuild -v 19.1.8 node-pty",
    "lint": "eslint src --ext ts",
    "build-test": "npm run esbuild && node esbuild.test.mjs",
    "test": "npm run build-test && node ./out/runTestOnVSCodeHost.js",
    "quick-test": "npm run build-test && node ./out/runTestOnVSCodeHost.js",
    "prepackage": "node scripts/prepackage.js",
    "package": "node scripts/package.js",
    "package-all": "node scripts/package-all.js",
    "package:pre-release": "node scripts/package.js --pre-release",
    "build:rust": "cargo-cp-artifact -ac sync sync.node -- cargo build --manifest-path ../../sync/Cargo.toml --message-format=json-render-diagnostics",
    "build-debug:rust": "npm run build:rust --",
    "build-release:rust": "npm run build:rust -- --release"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "@nestjs/common": "^8.4.7",
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/follow-redirects": "^1.14.4",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "16.x",
    "@types/react-dom": "^18.2.4",
    "@types/request": "^2.48.8",
    "@types/vscode": "1.70",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/vsce": "^2.22.0",
    "cargo-cp-artifact": "^0.1",
    "esbuild": "0.17.19",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "json-schema-to-typescript": "^12.0.0",
    "mocha": "^10.4.0",
    "ovsx": "^0.8.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^4.3.9",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@electron/rebuild": "^3.2.10",
    "@reduxjs/toolkit": "^1.9.3",
    "@types/node-fetch": "^2.6.11",
    "@types/uuid": "^9.0.8",
    "@vscode/ripgrep": "^1.15.9",
    "@vscode/test-electron": "^2.3.9",
    "axios": "^1.2.5",
    "core": "file:../../core",
    "cors": "^2.8.5",
    "dbinfoz": "^0.11.0",
    "downshift": "^7.6.0",
    "esbuild": "^0.17.19",
    "express": "^4.18.2",
    "fkill": "^8.1.0",
    "follow-redirects": "^1.15.4",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.7.0",
    "highlightable": "^1.3.0-beta.0",
    "http-proxy": "^1.18.1",
    "http-proxy-agent": "^7.0.0",
    "http-proxy-middleware": "^2.0.6",
    "https-proxy-agent": "^7.0.2",
    "ignore": "^5.3.0",
    "jsdom": "^24.0.0",
    "minisearch": "^7.0.0",
    "monaco-editor": "^0.45.0",
    "monaco-vscode-textmate-theme-converter": "^0.1.7",
    "ncp": "^2.0.0",
    "node-fetch": "^3.3.2",
    "node-machine-id": "^1.1.12",
    "posthog-node": "^3.6.3",
    "react-markdown": "^8.0.7",
    "react-redux": "^8.0.5",
    "read-last-lines": "^1.8.0",
    "request": "^2.88.2",
    "socket.io-client": "^4.7.2",
    "strip-ansi": "^7.1.0",
    "systeminformation": "^5.22.10",
    "tailwindcss": "^3.3.2",
    "undici": "^6.2.0",
    "uuid": "^9.0.1",
    "uuidv4": "^6.2.13",
    "vectordb": "^0.4.20",
    "vscode-languageclient": "^8.0.2",
    "ws": "^8.13.0",
    "yarn": "^1.22.21"
  }
}
